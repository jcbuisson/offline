generator client {
   provider = "prisma-client-js"
}

model stable {
   id             String     @unique
   createdAt      DateTime   @default(now())
   updatedAt      DateTime   @updatedAt
   name           String

   horses         horse[]
}

model horse {
   id             String     @unique
   createdAt      DateTime   @default(now())
   updatedAt      DateTime   @updatedAt
   name           String
   stable_id      String

   stable         stable    @relation(fields: [stable_id], references: [id], onDelete: Cascade)
}

datasource db {
   provider = "postgresql"
   url = env("DATABASE_URL")
}
