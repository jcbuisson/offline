generator client {
   provider = "prisma-client-js"
}

datasource db {
   provider = "postgresql"
   url = env("DATABASE_URL")
}

// meta data for all elements of all models, even deleted ones. `uid` is unique across models
model meta_data {
   uid                     String     @unique
   created_at              DateTime?
   updated_at              DateTime?
   deleted_at              DateTime?
}


//////////////        BUSINESS MODELS        //////////////

model user {
   uid                     String     @unique
   firstname               String?
   lastname                String?
   email                   String?    @unique

   user_group_relations    user_group_relation[]
}

// 'Enseignants', '1SN24D', '1APP24', 'Bin√¥me X & Y'
model group {
   uid                     String     @unique
   name                    String?    @unique(map: "group_name_unique")

   user_group_relations    user_group_relation[]
}

model user_group_relation {
   uid             String     @unique
   user_uid        String
   group_uid       String

   user user @relation(fields: [user_uid], references: [uid], onDelete: Cascade, onUpdate: NoAction)
   group group @relation(fields: [group_uid], references: [uid], onDelete: Cascade, onUpdate: NoAction)
   @@unique([user_uid, group_uid])
}
